<div class="container ">
    <div class="jumbotron no-margin">
        <h3> Marcações </h3>
        {{#if toConfirm}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h6 class="panel-title">Marcações por Confirmar</h6>
                </div>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>
                            <span class="glyphicon glyphicon-user"></span>
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-calendar"></span>
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-home"></span>
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-time"></span>
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-play"></span>
                        </th>
                        <th>Confirmação</th>
                    </tr>
                    </thead>
                    {{#each toConfirm}}
                        <tr data-href="#">
                            <a href="#">
                                <div>
                                    <!--TODO put style inside style.css-->
                                    <td>{{this.client_name}}</td>
                                    <td>{{this.date}}</td>
                                    <td>{{this.address}}</td>
                                    <td>{{this.start_hour}}:00</td>
                                    <td>{{this.duration}} horas</td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="...">
                                            <div class="btn-group" role="group">
                                                <form class="no-margin" action="/user/schedules/accept" method="post">
                                                    <input type="text" name="visits_id" hidden value="{{this.id}}">
                                                    <button type="submit" class="btn btn-success">SIM</button>
                                                </form>
                                            </div>
                                            <div class="btn-group" role="group">
                                                <form class="no-margin" action="/user/schedules/decline" method="post">
                                                    <input type="text" name="visits_id" hidden value="{{this.id}}">
                                                    <button type="submit" class="btn btn-danger">NÃO</button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </div>
                            </a>
                        </tr>
                    {{/each}}
                </table>
            </div>
        {{else}}
            <div>
                <h6 class="panel-title" style="margin-top: 20px">Marcações por Confirmar</h6>
            </div>
        <table class="table table-hover">
        <thead>
        <tr>
            <th>
                <span class="glyphicon glyphicon-user"></span>
            </th>
            <th>
                <span class="glyphicon glyphicon-calendar"></span>
            </th>
            <th>
                <span class="glyphicon glyphicon-home"></span>
            </th>
            <th>
                <span class="glyphicon glyphicon-time"></span>
            </th>
            <th>
                <span class="glyphicon glyphicon-play"></span>
            </th>
        </thead>
        </tr>
        {{/if}}
        {{#if confirmed}}
        <div>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-user"></span>
                    </th>
                    <th>
                        <span class="glyphicon glyphicon-calendar"></span>
                    </th>
                    <th>
                        <span class="glyphicon glyphicon-home"></span>
                    </th>
                    <th>
                        <span class="glyphicon glyphicon-time"></span>
                    </th>
                    <th>
                        <span class="glyphicon glyphicon-play"></span>
                    </th>
                    <h4> Não existe marcações por confirmar</h4>
                </tr>
                </thead>
                <br>
                <br>
                {{#each confirmed}}
                    <tr data-href="#">
                        <a href="#">
                            <div>
                                <!--TODO put style inside style.css-->
                                <td>{{this.client_name}}</td>
                                <td>{{this.date}}</td>
                                <td>{{this.address}}</td>
                                <td>{{this.start_hour}}:00</td>
                                <td>{{this.duration}} horas</td>
                            </div>
                        </a>
                    </tr>
                {{/each}}
            </table>
        </div>
        {{else}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Marcações Confirmadas</h2>
            </div>
            <h3>Não existem marcações confirmadas.</h3>
        </div>
        {{/if}}
    </div>
</div>