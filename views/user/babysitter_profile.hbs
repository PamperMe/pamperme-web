<div class="container">
    {{#if data}}
        <a href="/user/profile/edit">
            <button type="button" class=" btn btn-primary edit-button">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
        </a>
        <div class="jumbotron no-margin">
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
                    <div class="img-profile-big">
                        {{#if this.photo_url}}
                            <img style="background-image: url({{data.photo_url}}); margin: 0;">
                        {{else}}
                            <img style="background-image: url('/images/icon_undifined.png')">
                        {{/if}}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                    <div class="thumbnail profile-info">
                        <h2 class="small-h2">{{data.name}}</h2>
                        <div class="col-xs-6">
                            <h3 class="small-h3">{{data.age}} Anos</h3>
                            <h3 class="small-h3"><span class="glyphicon glyphicon-home"></span>{{data.location}}</h3>
                            <h3 class="small-h3"><span class="glyphicon glyphicon-star-empty"></span>{{data.evaluation}}
                                /10</h3>
                        </div>
                        <div class="col-xs-6 column-right">
                            <br>
                            <br>
                            <h3 class="small-h3"><span class="glyphicon glyphicon-euro"></span>{{data.price}}</h3>
                            <h3 class="small-h3"><span class="glyphicon glyphicon-phone"></span>{{data.phone}}</h3>
                        </div>
                    </div>
                </div>
                {{#if data.description}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="thumbnail">
                            <h2>Descrição</h2>
                            <h4>{{data.description}}</h4>
                        </div>
                    </div>
                {{else}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 20px">
                        <div class="thumbnail">
                            <h2>Descrição</h2>
                            <h3>Não existe Descrição</h3>
                        </div>
                    </div>
                {{/if}}
                {{#if availability}}

                    <div class="panel panel-default col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
                        <!-- Default panel contents -->
                        <div class="panel-heading">
                            <h2 class="panel-title">Disponibilidade</h2>

                        </div>
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Data</th>
                                <th>Hora Inicio</th>
                                <th>Hora Fim</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each availability}}
                                <tr>
                                    <td>
                                        {{this.date}}
                                    </td>
                                    <td>
                                        {{this.start_hour}}:00
                                    </td>
                                    <td>
                                        {{this.end_hour}}:00
                                    </td>
                                    <td>
                                        <form action="{{../data.id}}/confirm" method="post">
                                            <input type="text" name="id" hidden value="{{../data.uid}}">
                                            <input type="text" name="uid" hidden value="{{../data.id}}">
                                            <input type="text" name="rawData" hidden value="{{this.rawData}}">
                                            <input type="text" name="date" hidden value="{{this.date}}">
                                            <input type="text" name="start_hour" hidden value="{{this.start_hour}}">
                                            <input type="text" name="end_hour" hidden value="{{this.end_hour}}">
                                            <button type="submit">
                                                <span class="glyphicon glyphicon-plus"></span>
                                            </button>
                                            </a>
                                        </form>

                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pages">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                {{#each numberPages}}
                                    <li><a href="/babysitter/{{../data.uid}}/{{this}}">{{this}}</a></li>
                                {{/each}}
                            </ul>
                        </nav>
                    </div>
                {{/if}}
            </div>
        </div>
    {{/if}}
</div>

