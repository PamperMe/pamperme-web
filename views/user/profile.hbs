{{#if babysitter}}
    <div class="container">
        <a href="/user/edit">
            <button type="button" class=" btn btn-primary edit-button">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
        </a>
        <div class="jumbotron container-fluid no-margin">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                    <div class="img-profile-big">
                        <div
                            {{#if user.photo_url}}
                            style="background-image: url({{user.photo_url}})"
                            {{else}}
                            style="background-image: url('/images/icon_undifined.png')">
                            {{/if}}
                            <a href="#" style="display: block;">
                                <button type="submit" class="btn btn-primary" id="photo_change"
                                        style="position: absolute; margin: 5px;">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                            </a>
                        </div>
                        <form id="uploadForm" style="display: none;"
                              enctype="multipart/form-data"
                              action="/user/fileupload"
                              method="post">
                            <input type="file" name="userPhoto" required/>
                            <input type="submit" id="photo_uploaded" value="Upload Image" name="submit">
                        </form>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                    <div class="thumbnail profile-info">
                        <div class="row">
                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                                <h2 class="small-h2">{{user.name}}</h2>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-md-6 col-lg-6">
                                <h3 class="small-h3">{{user.age}} Anos</h3>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-md-6 col-lg-6">
                                <h3 class="small-h3"><span class="glyphicon glyphicon-home"></span>{{user.location}}
                                </h3>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-md-6 col-lg-6">
                                <h3 class="small-h3"><span class="glyphicon glyphicon-star-empty"></span>10/10</h3>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-md-6 col-lg-6">
                                <h3 class="small-h3"><span class="glyphicon glyphicon-euro"></span>{{user.price}}</h3>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-md-6 col-lg-6">
                                <h3 class="small-h3"><span class="glyphicon glyphicon-phone"></span>{{user.phone}}</h3>
                            </div>
                        </div>
                    </div>
                </div>
                {{#if user.description}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="panel panel-default col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
                            <!-- Default panel contents -->
                            <div class="panel-heading">
                                <h3 class="panel-title">Descrição</h3>

                            </div>
                            <h4 style="margin-left: 15px">{{{user.description}}}</h4>
                        </div>
                    </div>
                {{else}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 20px">
                        <div class="panel panel-default col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
                            <!-- Default panel contents -->
                            <div class="panel-heading">
                                <h2 class="panel-title">Descrição</h2>

                            </div>
                            <h4 style="margin-left: 15px">Não existe Descrição</h4>
                        </div>
                    </div>
                {{/if}}
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 20px">
                    <div class="panel panel-danger col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
                        <!-- Default panel contents -->
                        <div class="panel-heading">
                            <h2 class="panel-title">Marcações Proximas</h2>

                        </div>
                        {{#if visitsSoon}}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th style="text-align: center">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </th>
                                    <th style="text-align: center">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </th>
                                    <th style="text-align: center">
                                        <span class="glyphicon glyphicon-home"></span>
                                    </th>
                                    <th style="text-align: center">
                                        <span class="glyphicon glyphicon-time"></span>
                                    </th>
                                    <th style="text-align: center">
                                        <span class="glyphicon glyphicon-play"></span>
                                    </th>
                                </tr>
                                </thead>
                                {{#each visitsSoon}}
                                    <tr data-href="#">
                                        <a href="#">
                                            <div>
                                                <!--TODO put style inside style.css-->
                                                <td style="text-align: center">{{this.client_name}}</td>
                                                <td style="text-align: center">{{this.date}}</td>
                                                <td style="text-align: center">{{this.address}}</td>
                                                <td style="text-align: center">{{this.start_hour}}:00</td>
                                                <td style="text-align: center">{{this.duration}} horas</td>
                                            </div>
                                        </a>
                                    </tr>
                                {{/each}}

                            </table>
                        {{else}}
                            <h4 style="margin-left: 15px">Não existem Marcações.</h4>
                        {{/if}}


                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
    {{#if client}}
        <div class="container">
            <a href="/user/edit">
                <button type="button" class=" btn btn-primary edit-button">
                    <span class="glyphicon glyphicon-pencil"></span>
                </button>
            </a>
        <div class="jumbotron container-fluid no-margin">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                    <div class="img-profile-big">
                        {{#if user.photo_url}}
                        <div style="background-image: url({{user.photo_url}})">
                        {{else}}
                        <div style="background-image: url('/images/icon_undifined.png')">
                        {{/if}}

                        <a href="#" style="display: block;">
                            <button type="submit" class="btn btn-primary" id="photo_change"
                                    style="position: absolute; margin: 5px;">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                        </a>
                    </div>

                        <form id="uploadForm" style="display: none;"
                              enctype="multipart/form-data"
                              action="/user/fileupload"
                              method="post">
                            <input type="file" name="userPhoto" required/>
                            <input type="submit" id="photo_uploaded" value="Upload Image" name="submit">
                        </form>
                    </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                        <div class="thumbnail profile-info">
                            <div class="row">
                                <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                                    <h2 class="small-h2">{{user.name}}</h2>
                                </div>
                                <div class="col-xs-10 col-sm-10 col-md-6 col-lg-10">
                                    <h3 class="small-h3"><span class="glyphicon glyphicon-home"></span>{{user.address}}
                                    </h3>
                                </div>
                                <div class="col-xs-10 col-sm-10 col-md-6 col-lg-10">
                                    <h3 class="small-h3"><span class="glyphicon glyphicon-phone"></span>{{user.phone}}
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#if scheduledVisits}}
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="panel panel-default col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
                                <!-- Default panel contents -->
                                <div class="panel-heading">
                                    <h2 class="panel-title">Marcações</h2>

                                </div>
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>Babysitter</th>
                                        <th>Data</th>
                                        <th>Hora Inicio</th>
                                        <th>Duração</th>
                                        <th>Estado</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#each scheduledVisits}}
                                        <tr>
                                            <td>
                                                {{this.babysitter_name}}
                                            </td>
                                            <td>
                                                {{this.date}}
                                            </td>
                                            <td>
                                                {{this.start_hour}}:00
                                            </td>
                                            <td>
                                                {{this.duration}} horas
                                            </td>
                                            <td>
                                                {{#if this.accepted}}
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                {{/if}}
                                                {{#if this.noAnswer}}
                                                    <span class="glyphicon glyphicon-question-sign"></span>
                                                {{/if}}
                                                {{#if this.rejected}}
                                                    <span class="glyphicon glyphicon-remove"></span>
                                                {{/if}}
                                            </td>
                                        </tr>
                                    {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {{else}}
                        <div class="panel panel-default col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
                            <!-- Default panel contents -->
                            <div class="panel-heading">
                                <h2 class="panel-title">Marcações</h2>

                            </div>
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <h3>Nao existe</h3>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    {{/if}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pages">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                {{#each numberPages}}
                                    <li><a href="/user/profile/{{this}}">{{this}}</a></li>
                                {{/each}}
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
    {{/if}}
    </div>
{{/if}}
</div>