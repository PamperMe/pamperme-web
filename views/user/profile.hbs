<!--Se id profile == id user : é editavel-->
<!--Se não : apenas para ler-->
{{# if babysitter}}
    <div class="container" xmlns:padding-top="http://www.w3.org/1999/xhtml">
        <a href="/user/profile/edit">
            <button type="button" class=" btn btn-primary" style="float: right; margin-top: 5px;">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
        </a>
        <!-- Default panel contents -->
        <h2>{{user.name}}</h2>
        <!-- Table -->
        <table class="table">
            <tr>
                <td class="col-xs-1" colspan="3">

                    <a href="/user/profile/edit" style="display: block">
                        <button type="submit" style="float: right; margin-top: 5px;">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                    </a>
                    <img class="img-circle img-responsive-big" src="{{user.photo_url}}">
                    <div style="position: absolute">
                        <form id="uploadForm"
                              enctype="multipart/form-data"
                              action="/user/fileupload"
                              method="post">
                            <input type="file" name="userPhoto"/>
                            <input type="submit" value="Upload Image" name="submit">
                        </form>

                    </div>
                </td>
                <td style="height: 100%; width: 50%; padding-left: 20px">
                    <table style="height: 100%; width: 100%; ">
                        <tr>
                            <td><h4>{{userAge}} anos</h4></td>
                        </tr>
                        <tr>
                            <td><h4>{{user.location}}</h4></td>
                        </tr>
                        <tr>
                            <td><h4>{{user.price}}</h4></td>
                        </tr>
                    </table>
                </td>
                <td style="height: 100%; width: 50%; padding-left: 20px">
                    <table style="height: 100%; width: 100%; text-align: right">
                        <tr style="text-content: center; height: 80%">
                            <td><h2> 7/10 </h2></td>
                        </tr>
                        <tr style="text-align: right; height: 20%;">
                            <td>
                                <button class="btn-bitbucket"> Contactar</button>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <a>
                        <button>Fazer Marcação</button>
                    </a>
                </td>
            </tr>
        </table>

        <table style="width: 100%;">
            <tr>
                <td style="padding: 10px 5px;">
                    Descrição
                </td>
            </tr>
        </table>
    </div>
{{else}}
    {{#if client}}
        <div class="jumbotron fill no-margin">
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
                    <div class="thumbnail profile-img">
                        <!--Imagem Lado esquerdo-->
                        <img class="img-circle img-responsive-big" src="{{user.photo_url}}">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8 col-md-7 col-lg-7">
                    <div class="thumbnail profile-info">
                        <!--Info Centrado-->
                        <p>
                        <h3><span> Nome: {{user.name}} </span></h3></p>
                        <p><h4><span class="glyphicon glyphicon-home"></span> {{user.address}}</h4></p>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                    <div class="thumbnail profile-contact">
                        <!--Info rating/contact/price h-->
                        <div><!--Contact-->
                            <span class="glyphicon glyphicon-phone"> {{user.phone}} </span>
                        </div>
                    </div>
                    <br>
                    <a href="/user/profile/edit">
                        <button type="button" class=" btn btn-primary">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                    </a>
                </div>
                <form id="uploadForm"
                      enctype="multipart/form-data"
                      action="/user/fileupload"
                      method="post">
                    <input type="file" name="userPhoto"/>
                    <input type="submit" value="Upload Image" name="submit">
                </form>
            </div>
        </div>
    {{/if}}
{{/if}}

