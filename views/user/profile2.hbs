{{#if babysitter}}
    <div class="container">
        <a href="/user/profile/edit">
            <button type="button" class=" btn btn-primary edit-button">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
        </a>
        <div class="jumbotron fill no-margin">
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">

                    <div class="thumbnail profile-img">
                        <a href="#" style="display: block;">
                            <button type="submit" id="photo_change" style="float: right; ">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                        </a>
                        <!--Imagem Lado esquerdo-->
                        <img class="img-circle img-responsive-big" src="{{user.photo_url}}">
                        <form id="uploadForm" style="display: none;"
                              enctype="multipart/form-data"
                              action="/user/fileupload"
                              method="post">
                            <input type="file" name="userPhoto" required/>
                            <input type="submit" id="photo_uploaded" value="Upload Image" name="submit">
                        </form>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                    <div class="thumbnail profile-info">
                        <h2 class="small-h2">{{user.name}}</h2>
                            <div class="col-xs-6">
                                <h3 class="small-h3">{{userAge}} Anos</h3>
                                <h3 class="small-h3"><span class="glyphicon glyphicon-home"></span>{{user.location}}</h3>
                                <h3 class="small-h3"><span class="glyphicon glyphicon-star-empty"></span>10/10</h3>
                            </div>
                            <div class="col-xs-6 column-right">
                                <br>
                                <br>
                                <h3 class="small-h3"><span class="glyphicon glyphicon-euro"></span>{{user.price}}</h3>
                                <h3 class="small-h3"><span class="glyphicon glyphicon-phone"></span>{{user.phone}}</h3>
                            </div>
                    </div>
                </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <button class="btn btn-bitbucket btn-lg" style="margin: 0 auto; width: 100%">Marcar</button>
                    </div>
                {{#if user.description}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="thumbnail">
                            <h2>Descrição</h2>
                            <h4>{{user.description}}</h4>
                        </div>
                    </div>
                {{else}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 20px">
                        <div class="thumbnail">
                            <h2>Descrição</h2>
                            <h3>Não existe Descrição</h3>
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
{{else}}
    {{#if client}}
            <div class="jumbotron fill no-margin">
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
                        <div class="thumbnail profile-img">
                            <!--Imagem Lado esquerdo-->
                            <img class="img-circle img-responsive-big" src="{{user.photo_url}}">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-7 col-lg-7">
                        <div class="thumbnail profile-info">
                            <!--Info Centrado-->
                            <p>
                            <h3><span> Nome: {{user.name}} </span></h3></p>
                            <p><h4><span class="glyphicon glyphicon-home"></span> {{user.address}}</h4></p>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                        <div class="thumbnail profile-contact">
                            <!--Info rating/contact/price h-->
                            <div><!--Contact-->
                                <span class="glyphicon glyphicon-phone"> {{user.phone}} </span>
                            </div>
                        </div>
                        <br>
                    </div>
                </div>
            </div>
    {{/if}}
    </div>
{{/if}}